<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="MauiToolkitPopupSample.PopupPageAddToDo"
           CanBeDismissedByTappingOutsideOfPopup="False">
    <VerticalStackLayout BackgroundColor="White" WidthRequest="250" >
        
        <Label 
            Margin="15"
            Text="Add To-Do!"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="28"
            FontAttributes="Bold"/>

        <Editor x:Name="AddToDo"
                Placeholder="Enter Your ToDo"
                Margin="20" FontSize="20"/>

        <Button Margin="10" Text="Add" Clicked="Button_Clicked" FontSize="20"/>
        
    </VerticalStackLayout>
</mct:Popup>
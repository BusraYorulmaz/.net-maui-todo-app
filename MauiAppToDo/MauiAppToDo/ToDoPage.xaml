<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppToDo.ToDoPage"
             Title="To Do Page"
             BackgroundColor="White">


    <StackLayout>
    <ListView x:Name="LvToDoList" HasUnevenRows="True" Margin="10,10">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    
                    <!--To Do List-->
                    <StackLayout Padding="20" VerticalOptions="FillAndExpand" Orientation="Horizontal">
                        <Label Margin="20,10" Style="{StaticResource TextStyle}" TextColor="{StaticResource Primary}" Text="{Binding ToDoName}" 
                               FontSize="Medium" VerticalOptions="EndAndExpand" HorizontalOptions="StartAndExpand"/>
                        <RadioButton Content=""/>
                    </StackLayout>                   
                    

                </ViewCell>
                
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
        
        <!--Add to do-->
        <StackLayout Margin="20">
            <Label Style="{StaticResource TextStyle}" TextColor="{StaticResource Black}" Text="Add ToDo"
                   HorizontalOptions="End"/>
        </StackLayout>
    </StackLayout>
  
</ContentPage>